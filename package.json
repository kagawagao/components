  "license": "MIT",
  "bugs": {
    "url": "https://github.com/platojs/components/issues"
  },
  "homepage": "https://github.com/platojs/components",
  "dependencies": {
    "platojs": "latest"
  },
  "devDependencies": {
    "plato-dev-dependencies": "latest"
  }
}
