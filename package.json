{
  "name": "components",
  "version": "3.0.0-beta.9",
  "description": "Components for PLATO",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm test",
    "unit": "cross-env NODE_ENV=test DEBUG=PLATO:* karma start ./test/unit/runner.js",
